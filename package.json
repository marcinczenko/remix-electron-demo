{
  "name": "remix-electron-demo",
  "description": "Demo of using remix-electron",
  "author": "Marcin Czenko (marcin.czenko@pm.me)",
  "version": "0.1.0",
  "private": true,
  "main": "desktop/main.js",
  "scripts": {
    "clean": "del-cli dist desktop/build public/build",
    "dev": "yarn clean && cross-env NODE_ENV=development run-p --print-label --race 'dev:*'",
    "dev:remix": "remix watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:nodemon": "wait-on file:desktop/main.js && nodemon .",
    "build": "yarn clean && yarn build:css && remix build && electron-builder",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint './**/*.{js,jsx,ts,tsx}' --fix",
    "start": "cross-env NODE_ENV=production electron .",
    "test": "vitest",
    "typecheck": "tsc -b",
    "validate": "run-p \"test -- --run\" lint typecheck"
  },
  "build": {
    "files": [
      "desktop",
      "public",
      "remix.config.js"
    ]
  },
  "dependencies": {
    "@remix-run/node": "^1.18.1",
    "@remix-run/react": "^1.18.1",
    "@remix-run/server-runtime": "^1.18.1",
    "fast-glob": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-electron": "^1.3.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.18.1",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/eslint": "^8.44.0",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "electron": "^25.3.0",
    "electron-builder": "^24.5.2",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^10.3.2",
    "msw": "^1.2.2",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.26",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "packageManager": "yarn@3.2.2"
}
